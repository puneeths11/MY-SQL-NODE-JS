<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ALL Users</title>
    <style>
      table,
      th,
      td {
        border: 1px solid black;
      }
    </style>
  </head>
  <body>
    <form method="GET" action="/user/new">
      <button>Add New User</button>
    </form>
    <table>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Username</th>
        <th>Edit User</th>
        <th>Delete User</th>
      </tr>
      <%for(user of users){ %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td>
          <form action="/user/<%=user.id%>/edit" method="GET">
            <button>Edit Username</button>
          </form>
        </td>
        <td>
          <form method="get" action="/user/<%= user.id%>/delete">
            <button>Delete User</button>
          </form>
        </td>
      </tr>

      <%}%>
    </table>
  </body>
</html>
